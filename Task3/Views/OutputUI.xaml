<Window x:Class="Task3.Views.OutputUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3.Views"
        mc:Ignorable="d"
        Title="OutputUI" Height="450" Width="800">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="10,10,10,55">
            <TextBlock Margin="0,0,0,0" Text="{Binding OutputText}"/>
        </ScrollViewer>

        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="30" Width="115" Margin="0,0,10,10"
                Content="Сохранить" Command="{Binding SaveCommand}"/>
    </Grid>
</Window>
